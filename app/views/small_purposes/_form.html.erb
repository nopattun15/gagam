<%= form_with(model: [@big_purpose, @small_purpose], local: true) do |f| %>
<%= render '/layouts/error_messages', model: f.object %>

  <div class="form-group">
    <%= f.label :title, '目標名' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :time_limit, '目標期限' %>
    <%= f.date_field :time_limit, class: 'form-control' %>
  </div>
  
  <%= f.submit '完了', class: 'btn btn-primary btn-block'  %>
  
<% end %>